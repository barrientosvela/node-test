<%- include("template/cabecera", {tituloWeb: 'Detalles del Pokemon' }) %>
    <div class="container">
        <h1>Detalles del Pokémon</h1>
    </div>
    <% if (error) { %>
        <%= mensaje %>
            <a href="/pokemon" class="btn btn-dark btn-block my-2">
                Volver
            </a>
            <% } %>
                <% if (!error) { %>
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Nombre</th>
                                <th scope="col">Tipo</th>
                                <th scope="col">Descripción</th>
                                <th scope="col">Ataque</th>
                                <th scope="col">Acción</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <th scope="row">
                                    <%= pokemon.id %>
                                </th>
                                <td>
                                    <%= pokemon.nombre %>
                                </td>
                                <td>
                                    <%= pokemon.tipo %>
                                </td>
                                <td>
                                    <%= pokemon.descripcion %>
                                </td>
                                <td>
                                    <%= pokemon.ataque %>
                                </td>
                                <td>
                                    <a class="btn btn-warning btn-sm"
                                        href="pokemon/<%= pokemon.id %>">Editar/Eliminar</a>
                                </td>
                                <td>
                                    <button class="btn btn-danger btn-sm" data-id="<%= pokemon.id %>">
                                        Eliminar
                                    </button>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    <% } %>

                        <%- include("template/footer") %>